    "next-themes": "^0.3.0",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "react-router-dom": "^6.27.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.13.0",
    "eslint-plugin-react": "^7.37.2",
