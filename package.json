    "lint": "eslint 'backend/**/*.js'",
    "format": "prettier --write 'backend/**/*.js'",
    "check:deps": "npm-check"
  },
  "keywords": [
    "backend",
    "frontend"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@chakra-ui/icons": "^2.2.4",
    "@chakra-ui/react": "^3.0.0",
